<div id="gallery">
  <div class="container page">
    <h1>Galerie</h1>
    <div id="lightgallery">
      {{#if galleries}}
        {{#each galleries}}
          <h2>{{name}}
            <div class="pull-right text-muted">{{localDate}}</div>
          </h2>
          <div class="row">
            {{#each images}}
              <div class="col-sm-2 gallery-image" data-src="{{cloudinaryUrl}}">
                <img src="{{cloudinaryUrl width='300'}}">
              </div>
            {{/each}}
            {{#each videos}}
              <div class="col-sm-2 gallery-image" data-src="{{url}}">
                <img src="{{thumbnailUrl}}">
              </div>
            {{/each}}
          </div>
        {{/each}}
      {{else}}
        <h3 class="text-muted">Il n'y a pas encore d'album.</h3>
      {{/if}}
    </div>
    <script>
      window.onload = function () {
        lightGallery(document.getElementById('lightgallery'), { selector: '.gallery-image' });
      };
    </script>
  </div>
</div>
