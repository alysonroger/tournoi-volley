<div id="ranking">
  <div class="container page">
    <h1>Classement</h1>
    {{#if pools}}
      {{#each pools}}
        <h2 class="pool{{name}}">Poule {{name}}</h2>
        <div class="table-container">
          <table class="table">
            <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col" class="team">Équipe</th>
              <th scope="col">Gagnés</th>
              <th scope="col">Perdus</th>
              <th scope="col">Joués</th>
              <th scope="col">Points</th>
            </tr>
            </thead>
            <tbody>
            {{#each teams}}
              <tr>
                <th>{{rank}}</th>
                <th>{{team}}</th>
                <th>{{matchesWon}}</th>
                <th>{{matchesLost}}</th>
                <th>{{matchesPlayed}}</th>
                <th>{{points}}</th>
              </tr>
            {{/each}}
            </tbody>
          </table>
        </div>
      {{/each}}
    {{else}}
      <h3 class="text-muted">There is no pool yet.</h3>
    {{/if}}
  </div>
</div>
